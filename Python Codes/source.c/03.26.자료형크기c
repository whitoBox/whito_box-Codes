#include <stdio.h>
int main()
{
    short a;
    int b;
    long long c;
    
    printf("자료형의 크길ㄹ 구하는 하수 : sizeof() 함수\n");
    printf("1.short형 변수: %d바이트\n",sizeof(a));
    printf("2.int형 변수: %d바이트\n",sizeof(b));
    printf("3.long long형 변수: %d 바이트\n",sizeof(c));
    printf("1.바이트는 8비트입니다.\n");
    printf("4.short형 변수 : %d비트\n",sizeof(a)*8);
    printf("5.int형 변수 : %d바이트\n",sizeof(b)*8);
    printf("6.long long형 변수 : %d바이트",sizeof(c)*8);
    return 0;
}
